<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <co.herxun.impp.view.AppBar
        android:id="@+id/user_detail_app_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/no1" >
    </co.herxun.impp.view.AppBar>

    <co.herxun.impp.view.UserDetailView
        android:id="@+id/userDetailAct_userDetailView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/user_detail_app_bar" >
    </co.herxun.impp.view.UserDetailView>

</RelativeLayout>
