<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no5"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/user_detail_img"
            android:layout_width="148dp"
            android:layout_height="148dp"
            android:scaleType="centerCrop"
            android:src="@drawable/friend_default" />

        <TextView
            android:id="@+id/user_detail_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/no1"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/user_detail_text_btn"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_marginTop="24dp"
            android:background="@color/no1"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/no5" />

    </LinearLayout>

</LinearLayout>