<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/no1"
    tools:context="${relativePackage}.${activityClass}" >

    <ImageView
        android:id="@+id/view_wall_header_icon"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/friend_default" />

    <TextView
        android:id="@+id/view_wall_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/view_wall_header_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:padding="0dp"
        android:text="TextView"
        android:textColor="@color/no5"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_room_join"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/view_wall_header_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_shape"
        android:text="@string/room_header_join_btn"
        android:textColor="@color/no5"
        android:textSize="13dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_room_join"
        android:layout_marginTop="16dp"
        android:background="@color/no5" >

        <TextView
            android:id="@+id/room_header_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/room_header_description"
            android:textColor="@color/no1"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/room_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/room_header_des"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:text="@string/room_header_description"
            android:textColor="@color/no10"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@+id/room_description"
            android:background="@color/no5" />
    </RelativeLayout>

</RelativeLayout>