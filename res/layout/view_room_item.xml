<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/left_relayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="48dp" >

        <ImageView
            android:id="@+id/left_room_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/room_default" />

        <TextView
            android:id="@+id/left_room_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/left_room_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="123" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_relayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="48dp" >

        <ImageView
            android:id="@+id/right_room_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/room_default" />

        <TextView
            android:id="@+id/right_room_name"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/right_room_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="3211" />
    </RelativeLayout>

</RelativeLayout>