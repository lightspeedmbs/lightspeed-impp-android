<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:id="@+id/action_dialog_friend_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/dialog_img1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            android:src="@drawable/dialog_add" />

        <TextView
            android:id="@+id/dialog_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friend_action_new_friend"
            android:textColor="@color/no11"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/action_dialog_topic_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/dialog_img2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="32dp"
            android:src="@drawable/dialog_group" />

        <TextView
            android:id="@+id/dialog_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/friend_action_new_topic"
            android:textColor="@color/no11"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>